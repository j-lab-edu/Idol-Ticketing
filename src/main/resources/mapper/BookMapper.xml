<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.idolticketing.idolticketing.dao.BookMapper">
    <insert id="createBook">
        INSERT INTO book
        (userId,category,contentId,bookState)
        VALUES
        (#{userId},#{category},#{contentId},#{bookState})
    </insert>
    <update id="cancelBook">
        UPDATE book
        SET
        bookState = #{bookState}
        WHERE
        id = #{id}
    </update>
    <update id="holdBook">
        UPDATE book
        SET
        bookState = #{bookState}
        WHERE
        id = #{id}
    </update>
    <select id="getBook" resultType="com.idolticketing.idolticketing.dto.BookDTO">
        SELECT * FROM book where id = #{id}
    </select>


</mapper>