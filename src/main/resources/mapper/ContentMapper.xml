<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.idolticketing.idolticketing.dao.ContentMapper">
    <insert id="createContent">
        INSERT INTO content
        ( name, price,description,date,location,seat,category,userId,deadLine)
        VALUES
        (#{name},#{price},#{description},#{date},#{location},#{seat},#{category},#{userId},#{deadLine})
    </insert>
    <update id="patchContent">
        UPDATE content
        SET
        description = #{description}
        name = #{name}
        price = #{price}
        picture = #{picture}
        category = #{category}
        location = #{location}
        date = #{date}
        seat = #{seat}
        deadLine = #{deadLine}
        WHERE
        userId = #{userId}
    </update>

    <delete id="deleteContent">
        DELETE FROM content
        WHERE
        id = #{id}
    </delete>
    <select id="getContent" resultType="com.idolticketing.idolticketing.dto.ContentDTO">
        SELECT * FROM content where id=#{id};
    </select>
    <select id="selectContent" resultType="com.idolticketing.idolticketing.dto.ContentDTO">
        SELECT * FROM content
        WHERE
        name LIKE concat('%',#{keyword},'%')
    </select>
    <select id="selectContents" resultType="map">
        SELECT * FROM content
        WHERE
        name LIKE concat('%',#{keyword},'%')
        ORDER BY #{sortType} ${upDownType}
        LIMIT #{limitCount}
    </select>
